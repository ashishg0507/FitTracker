<%- include('../partials/head', { skipBaseCss: true, extraCss: "<link rel='stylesheet' href='/assets/css/auth-signin.css'>" }) %>

<div class="container">
    <div class="left-panel">
        <div class="animated-content">
            <div class="fitness-icon"><i class="fas fa-dumbbell"></i></div>
            <h1>Welcome Back</h1>
            <p>Continue your fitness journey</p>
            <div class="animated-elements">
                <div class="pulse-circle circle-1"></div>
                <div class="pulse-circle circle-2"></div>
                <div class="pulse-circle circle-3"></div>
            </div>
            <div class="floating-icons">
                <i class="fas fa-heart"></i>
                <i class="fas fa-fire"></i>
                <i class="fas fa-trophy"></i>
                <i class="fas fa-running"></i>
            </div>
        </div>
    </div>

    <div class="right-panel">
        <div class="form-container">
            <div class="form-header">
                <h2>Sign In</h2>
                <p>Welcome back to your fitness journey</p>
            </div>
            <form class="signin-form" id="signinForm" method="post" action="/signin">
                <div class="form-group">
                    <div class="input-container"><i class="fas fa-user"></i>
                        <input type="text" id="username" name="username" placeholder="Username" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-container"><i class="fas fa-lock"></i>
                        <input type="password" id="password" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="rememberMe" name="rememberMe">
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </div>
                <button type="submit" class="signin-btn"><span>Sign In</span><i class="fas fa-arrow-right"></i></button>
                <div class="signup-link"><p>Don't have an account? <a href="/signup" class="signup-text">Sign Up</a></p></div>
            </form>
        </div>
    </div>
</div>

<script src="/assets/js/auth-signin.js"></script>
</body>
</html>
