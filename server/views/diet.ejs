<%- include('partials/head', { extraCss: '<link rel="stylesheet" href="/assets/css/diet.css">' }) %>
<%- include('partials/nav') %>

<main class="main-content">
    <section class="page-header">
        <div class="container">
            <h1 class="page-title">Nutrition & Diet Plans</h1>
            <p class="page-subtitle">Fuel your fitness journey with personalized nutrition plans and expert dietary guidance</p>
        </div>
    </section>

    <section class="diet-content">
        <div class="container">
            <!-- Diet Calculator Section -->
            <div class="diet-calculator-section">
                <div class="calculator-container">
                    <h2 class="section-title">Calculate Your Daily Nutrition Needs</h2>
                    <div class="calculator-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="age">Age</label>
                                <input type="number" id="age" name="age" placeholder="25" min="16" max="100">
                            </div>
                            <div class="form-group">
                                <label for="gender">Gender</label>
                                <select id="gender" name="gender">
                                    <option value="">Select Gender</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="weight">Weight (kg)</label>
                                <input type="number" id="weight" name="weight" placeholder="70" min="30" max="200" step="0.1">
                            </div>
                            <div class="form-group">
                                <label for="height">Height (cm)</label>
                                <input type="number" id="height" name="height" placeholder="175" min="120" max="250">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="activity">Activity Level</label>
                                <select id="activity" name="activity">
                                    <option value="">Select Activity Level</option>
                                    <option value="sedentary">Sedentary (little/no exercise)</option>
                                    <option value="light">Lightly Active (light exercise 1-3 days/week)</option>
                                    <option value="moderate">Moderately Active (moderate exercise 3-5 days/week)</option>
                                    <option value="active">Very Active (hard exercise 6-7 days/week)</option>
                                    <option value="very-active">Extra Active (very hard exercise & physical job)</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="goal">Fitness Goal</label>
                                <select id="goal" name="goal">
                                    <option value="">Select Goal</option>
                                    <option value="lose">Lose Weight</option>
                                    <option value="maintain">Maintain Weight</option>
                                    <option value="gain">Gain Weight</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-full" id="calculate-btn">
                            <i class="fas fa-calculator"></i>
                            Calculate My Nutrition Plan
                        </button>
                    </div>
                </div>
            </div>

            <!-- Results Section -->
            <div class="results-section" id="results-section" style="display: none;">
                <h2 class="section-title">Your Personalized Nutrition Plan</h2>
                <div class="results-grid">
                    <div class="result-card">
                        <div class="result-icon">
                            <i class="fas fa-fire"></i>
                        </div>
                        <h3>Daily Calories</h3>
                        <div class="result-value" id="calories">0</div>
                        <p class="result-label">kcal/day</p>
                    </div>
                    <div class="result-card">
                        <div class="result-icon">
                            <i class="fas fa-drumstick-bite"></i>
                        </div>
                        <h3>Protein</h3>
                        <div class="result-value" id="protein">0</div>
                        <p class="result-label">grams/day</p>
                    </div>
                    <div class="result-card">
                        <div class="result-icon">
                            <i class="fas fa-bread-slice"></i>
                        </div>
                        <h3>Carbs</h3>
                        <div class="result-value" id="carbs">0</div>
                        <p class="result-label">grams/day</p>
                    </div>
                    <div class="result-card">
                        <div class="result-icon">
                            <i class="fas fa-seedling"></i>
                        </div>
                        <h3>Fats</h3>
                        <div class="result-value" id="fats">0</div>
                        <p class="result-label">grams/day</p>
                    </div>
                </div>
            </div>

            <!-- Generate Diet Plan Section -->
            <div class="generate-plan-section" id="generate-plan-section" style="display: none;">
                <div class="generate-plan-container">
                    <h2 class="section-title">Generate Your Personalized Meal Plan</h2>
                    <div class="plan-options">
                        <div class="plan-option">
                            <input type="radio" name="plan-duration" id="plan-7days" value="7" checked>
                            <label for="plan-7days">
                                <div class="plan-icon"><i class="fas fa-calendar-week"></i></div>
                                <h3>7-Day Plan</h3>
                                <p>One week of meals</p>
                            </label>
                        </div>
                        <div class="plan-option">
                            <input type="radio" name="plan-duration" id="plan-14days" value="14">
                            <label for="plan-14days">
                                <div class="plan-icon"><i class="fas fa-calendar-alt"></i></div>
                                <h3>14-Day Plan</h3>
                                <p>Two weeks of meals</p>
                            </label>
                        </div>
                        <div class="plan-option">
                            <input type="radio" name="plan-duration" id="plan-30days" value="30">
                            <label for="plan-30days">
                                <div class="plan-icon"><i class="fas fa-calendar"></i></div>
                                <h3>30-Day Plan</h3>
                                <p>Full month of meals</p>
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-full" id="generate-plan-btn">
                        <i class="fas fa-magic"></i>
                        Generate My Meal Plan
                    </button>
                </div>
            </div>

            <!-- Meal Plan Display Section -->
            <div class="meal-plan-display" id="meal-plan-display" style="display: none;">
                <h2 class="section-title">Your Weekly Meal Plan</h2>
                <div class="weekly-meals" id="weekly-meals">
                    <!-- Meal plan will be injected here via JavaScript -->
                </div>
            </div>

            <!-- Nutrition Tips Section -->
            <div class="nutrition-tips-section">
                <h2 class="section-title">Expert Nutrition Tips</h2>
                <div class="tips-grid">
                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-tint"></i>
                        </div>
                        <h3>Stay Hydrated</h3>
                        <p>Drink at least 8 glasses of water daily. Proper hydration supports metabolism, energy levels, and overall health.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3>Eat Regularly</h3>
                        <p>Maintain consistent meal times to keep your metabolism active and prevent overeating.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-balance-scale"></i>
                        </div>
                        <h3>Portion Control</h3>
                        <p>Use smaller plates and measure portions to avoid overeating while still feeling satisfied.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-seedling"></i>
                        </div>
                        <h3>Whole Foods First</h3>
                        <p>Prioritize whole, unprocessed foods that provide maximum nutrition and fiber.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-ban"></i>
                        </div>
                        <h3>Limit Processed Foods</h3>
                        <p>Reduce intake of processed foods high in sugar, salt, and unhealthy fats.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <h3>Quality Sleep</h3>
                        <p>Get 7-9 hours of quality sleep to support proper hormone regulation and recovery.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-dumbbell"></i>
                        </div>
                        <h3>Pair Nutrition with Exercise</h3>
                        <p>Combine a balanced diet with regular physical activity for optimal health and fitness results.</p>
                    </div>

                    <div class="tip-card">
                        <div class="tip-icon">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <h3>Eat Your Vegetables</h3>
                        <p>Fill half your plate with vegetables at every meal for vitamins, minerals, and fiber.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="/assets/js/diet.js"></script>
<%- include('partials/footer') %>
